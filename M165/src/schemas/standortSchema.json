{
  $jsonSchema: {
    bsonType: 'object',
    required: [
      'name',
      'adresse'
    ],
    properties: {
      _id: {
        bsonType: 'objectId'
      },
      name: {
        bsonType: 'string',
        minLength: 2,
        maxLength: 100
      },
      adresse: {
        bsonType: 'string',
        minLength: 10
      }
    }
  }
}
